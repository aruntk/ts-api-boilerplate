{
  "name": "ts-api-boilerplate",
  "version": "0.0.1",
  "description": "typescript boilerplate with swagger support",
  "repository": "https://github.com/aruntk/ts-api-boilerplate",
  "author": "aruntk",
  "license": "MIT",
  "scripts": {
    "watch": "ts-node -P tsconfig.json ./dev/start.ts",
    "build": "yarn tsc -p ./tsconfig.prod.json",
    "start": "yarn build && yarn tsoa:gen && node ./src/dist/start-server.js",
    "tsoa:gen": "yarn tsoa swagger -c ./tsoa.json && yarn tsoa routes -c ./tsoa.json",
    "lint": "tslint -p ./",
    "test": "cross-env TS_NODE_PROJECT=./tsconfig.json mocha -t 15000 -r ts-node/register \"./src/**/*.spec.ts\"",
    "commit": "npx git cz",
    "semantic-release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./cz-adapter"
    }
  },
  "publishConfig": {
    "access": "restricted"
  },
  "dependencies": {
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/morgan": "^1.7.35",
    "@types/passport": "^1.0.0",
    "@types/passport-jwt": "^3.0.1",
    "@types/swagger-ui-express": "^3.0.1",
    "body-parser": "^1.19.0",
    "chalk": "^2.4.2",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "global": "^4.4.0",
    "jsonwebtoken": "^8.5.1",
    "method-override": "^3.0.0",
    "moment": "^2.29.4",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "superagent": "^5.1.0",
    "swagger-ui-express": "^4.0.7",
    "tsoa": "^2.4.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.7",
    "@types/chalk": "^2.2.0",
    "@types/chokidar": "^2.1.3",
    "@types/express": "^4.17.0",
    "@types/method-override": "^0.0.31",
    "@types/minimatch": "^3.0.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.0.12",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "@types/readline-sync": "^1.4.3",
    "@types/superagent": "^4.1.2",
    "chai": "^4.2.0",
    "chokidar": "^3.0.1",
    "cross-env": "^5.2.0",
    "docker-compose": "^0.17.5",
    "keypress": "^0.2.1",
    "minimatch": "^3.0.4",
    "mocha": "^6.1.4",
    "readline-sync": "^1.4.9",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-immutable": "^6.0.1",
    "typescript": "^3.5.2",
    "typescript-tslint-plugin": "^0.5.3",
    "@commitlint/cli": "^7.5.2",
    "commitizen": "^3.1.1",
    "husky": "^2.2.0",
    "lodash.map": "^4.6.0",
    "longest": "^2.0.1",
    "right-pad": "^1.0.1",
    "semantic-release": "^15.13.3",
    "word-wrap": "^1.2.3"
  }
}
