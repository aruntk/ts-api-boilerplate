{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "exclude": [
      "node_modules"
    ],
    "include": [
      "src/**/*"
    ],
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "lib": [
      "esnext",
      "dom"
    ]
  }
}
