{
  "extends": [
    "tslint-config-airbnb",
    "tslint-immutable",
    "tslint-config-prettier"
  ],
  "rules": {
    "align": [true, "parameters", "statements", "members", "elements"],
    "completed-docs": [
      true,
      {
        "functions": true,
        "methods": true
      }
    ],
    "function-name": [ true, { "method-regex": "[a-z][\\w\\d]+$", "private-method-regex": "^[a-z][\\w\\d]+$", "protected-method-regex": "^[a-z][\\w\\d]+$", "static-method-regex": "^[A-Z_\\d]+$", "function-regex": "^[a-z][\\w\\d]+$" } ],
    "no-console": [true, "log", "error"],
    "no-implicit-dependencies": false,
    "max-line-length": [true, {"limit": 140, "ignore-pattern": "^import |^export {(.*?)}"}],
    "object-shorthand-properties-first": false,
    "only-arrow-functions": false,
    "semicolon": [true, "never"],
    "ter-arrow-parens": false,
    "variable-name": {
      "options": "allow-leading-underscore"
    }
  }
}
